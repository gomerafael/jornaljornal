<%= form_for(post, url: url) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class = 'linha'>
    <div class = "col-md-3">

        <div class="card" style="width: 20rem;">
          <div class="card-block">
            <%if @post.new_record? %>
              <h4 class="card-title">New post</h4>
            <% else %>
              <h4 class="card-title">
                <b>Edit</b>
                <span class ="thin-text"><%= @post.title %></span>
              </h4>
            <% end %>

          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <div class="field">
                  <%= f.label :title %>
                  <%= f.text_field :title, class: 'form-control' %>
              </div>

            </li>
            <li class="list-group-item">
              <div class="field">
                  <%= f.label :banner_image_url %>
                  <%= f.text_field :banner_image_url, class: 'form-control' %>
              </div>

            </li>
            <li class="list-group-item">
                <div class="field">
                    <%= f.label :description %>
                    <%= f.text_area :description, class: 'form-control' %>
                </div>
            </li>
            <li class="list-group-item">
                <div class="actions">
                  <%= f.submit "Salvar blog post", class: 'btn btn-success btn-block' %>
                </div>
            </li>
          </ul>
        </div>

        <% if @post.persisted? %>
          <%= link_to 'Visualizar', @post %> |
        <% end %>
        <%= link_to 'Voltar', authors_posts_path %>

    </div>
    <div class = "col-md-9">
        <div class="field">

          <%= f.text_area :body %>
        </div>
    </div>
  </div>





<% end %>
